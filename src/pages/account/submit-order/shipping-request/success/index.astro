---
import MainLayout from "@/layouts/MainLayout.astro";
const query = Astro.url.searchParams;
const orderId = query.get("orderId");

export const prerender = false;
---

<MainLayout
  title="Shipping Request Success | Pickup Korea"
  currentRoute="/account/submit-order/shipping-request/success"
>
  <main
    class="max-w-7xl w-full px-4 py-16 gap-4 mx-auto min-h-screen flex flex-col justify-start items-center"
  >
    <h1 class="text-2xl font-bold">Shipping Request Submitted</h1>
    <p class="text-gray-500">
      Your shipping request has been submitted successfully.
    </p>
    <p>Your Unique Order ID is: <span class="font-bold">{orderId}</span></p>
    <p>
      Once the submitted request is reviewed by our trusted staff, you will be
      issued a shipping invoice. Once it is paid, we will proceed with the
      shipping.
    </p>

    <p>
      You can check your shipping request status by going to the
      <a href="/account/shipping-request" class="text-blue-500 hover:underline"
        >Shipping Request</a
      >
      page.
    </p>
  </main>
</MainLayout>
