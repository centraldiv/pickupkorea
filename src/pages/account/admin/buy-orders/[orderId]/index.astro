---
import MainLayout from "@/layouts/MainLayout.astro";
import AdminSingleOrderContainer from "@/components/admin/orders/common/AdminSingleOrderContainer";

const { orderId } = Astro.params;

if (!orderId) {
  return Astro.redirect("/account/admin/buy-orders");
}
---

<MainLayout
  title="Order | Buy Orders | Admin | Pickup Korea"
  currentRoute="/account/admin/buy-orders"
  isAdmin
>
  <main class="w-full px-4">
    <AdminSingleOrderContainer
      orderId={orderId}
      orderType="BuyOrder"
      client:load
    />
  </main>
</MainLayout>
