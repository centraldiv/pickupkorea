---
import MainLayout from "@/layouts/MainLayout.astro";
import AdminUserAccountInfo from "@/components/admin/users/AdminUserAccountInfo";

const { userId } = Astro.params;

if (!userId) {
  return Astro.redirect("/account/admin/users");
}
---

<MainLayout
  title="User | Pickup Korea"
  currentRoute="/account/admin/users"
  isAdmin
>
  <main class="max-w-7xl mx-auto w-full py-16">
    <h1 class="text-2xl font-bold text-center">Users</h1>
    <AdminUserAccountInfo userId={userId} client:load />
  </main>
</MainLayout>
