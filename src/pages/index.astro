---
import { Image } from "astro:assets";
import MainLayout from "../layouts/MainLayout.astro";
import ShoppingBanner from "../assets/shopping-banner.png";
import Location from "../assets/location.png";
import Cart from "../assets/cart.png";
import Package from "../assets/package.png";
import Clock from "../assets/clock.png";
import Talk from "../assets/talk.png";
import Plane from "../assets/plane.png";
import Hand from "../assets/hand.png";
import QrCode from "../assets/qrcode.png";
import { cn } from "@/lib/utils";

const data = [
  {
    title: "Get your <br/> Korean address",
    description:
      "Click the MY menu after you sign up. You can find your address.",
    image: Location,
  },
{
    title: "Shop <br/> in Korea",
    description:
      "You can order product by yourself with your free address. Or ask us to help buying instead.",
    image: Cart,
  },
  {
    title: "Pick up <br/> your Package",
    description:
      "Once your items arrive, we are ready to deliver your package. You can ask us Free consolidation and packing or other optional services.",
    image: Package,
  },
];

const shippingData = [
  { title: "EMS", url: "https://ems.epost.go.kr/front.Tracking01Eng.postal" },
  { title: "FEDEX", url: "https://www.fedex.com/en-kr/home.html" },
  { title: "UPS", url: "https://www.ups.com/us/en/Home.page" },
  { title: "DHL", url: "https://www.dhl.com/kr-en/home/tracking.html" },
];

export const prerender = true;
---

<MainLayout title="Pickup Korea" currentRoute="/">
  <main>
    <section
      class="flex flex-col lg:flex-row items-start py-12 px-4 md:px-8 max-w-7xl mx-auto gap-6 md:gap-10 justify-center"
    >
      <div
        class="w-full h-auto flex flex-col gap-6 md:gap-12 text-center lg:text-left"
      >
        <h1 class="titles leading-tight md:leading-[normal]">
          Shop in Korea,

          <br />
          Pick it up at your door.
        </h1>
        <p class="sub-texts">Korean Free address & Shopping helper.</p>
      </div>
      <Image
        src={ShoppingBanner}
        alt="Shopping banner"
        class="w-full h-full flex-1 max-w-[25rem] mx-auto"
        loading="eager"
      />
    </section>
    <section
      class="bg-white py-16 px-4 flex flex-col items-center max-w-7xl w-full mx-auto"
    >
      <h2 class="text-center titles font-bold mb-16 text-black">
        How It Works
      </h2>
      <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10 sm:gap-20"
      >
        {
          data.map((item, index) => (
            <div
              class:list={[
                "flex flex-col items-center gap-8 max-w-[22.5rem] mx-auto",
                index === 2 &&
                  "sm:col-span-2 flex justify-center lg:col-span-1",
              ]}
            >
              <Image
                src={item.image}
                alt={item.title}
                height={80}
                width={80}
                class={cn(
                  index === 0 && "w-[3.85rem] h-20",
                  index === 1 && "size-20",
                  index === 2 && "w-[4.469rem] h-20"
                )}
              />
              <dl class="flex flex-col gap-4 sm:gap-8 sub-texts text-center">
                <dt class="font-bold bg-black text-white flex items-center justify-center rounded-[2.25rem] h-[5rem] sm:h-[7.25rem] px-4">
                  <span set:html={item.title} />
                </dt>
                <dd class="">{item.description}</dd>
              </dl>
            </div>
          ))
        }
      </div>
    </section>
    <section class="py-12 md:py-24">
      <h3 class="titles font-bold text-center mb-8 md:mb-16">
        Why Pickup Korea?
      </h3>
      <div class="space-y-12 md:space-y-[3.44rem]">
        <article class="bg-primary py-12 md:py-24 px-8 md:px-16">
          <div class="max-w-7xl w-full mx-auto">
            <div
              class="flex flex-col md:flex-row gap-8 md:gap-20 justify-center"
            >
              <div
                class="relative flex-shrink-0 h-48 md:h-[19.0625rem] w-48 md:w-[20.9375rem] mx-auto"
              >
                <Image src={Clock} alt="Clock" class="" />
              </div>
              <dl class="flex flex-col gap-4 md:gap-8 text-center md:text-left">
                <dt class="sub-large-texts font-bold">Quick response</dt>
                <dd
                  class="sub-texts-2 max-w-full md:max-w-[48rem] leading-[100%]"
                >
                  We work from 9 to 5 p.m. in Korean time during weekdays, but
                  the KakaoTalk chat is always open to respond to your urgent
                  request. <br /> Please understand that it may be difficult to respond
                  immediately.
                </dd>
                <div
                  class="flex items-center justify-center md:justify-start space-x-4"
                >
                  <div class="relative size-[6.875rem]">
                    <Image src={Talk} alt="KakaoTalk" loading="lazy" />
                  </div>
                  <div class="relative size-[6.875rem]">
                    <Image src={QrCode} alt="QR Code" loading="lazy" />
                  </div>
                </div>
              </dl>
            </div>
          </div>
        </article>
        <article class="py-12 md:py-24 px-8 md:px-16">
          <div class="max-w-7xl w-full mx-auto">
            <div
              class="flex flex-col-reverse md:flex-row gap-8 md:gap-20 justify-center items-center"
            >
              <div
                class="relative flex-shrink-0 h-48 md:h-[19.0625rem] w-48 md:w-[20.9375rem] mx-auto"
              >
                <Image src={Plane} alt="Airplane" />
              </div>
              <dl class="flex flex-col gap-4 md:gap-8 text-center md:text-left">
                <dt class="font-bold sub-large-texts">
                  Free services & Cheap delivery.
                </dt>
                <dd
                  class="sub-texts-2 max-w-full md:max-w-[45rem] leading-[100%]"
                >
                  Free address! Even package consolidation and re-packing are
                  offered by no extra cost.
                  <br />
                  You can choose the better shipper between EMS and Express carrier
                  like FEDEX, UPS and DHL.
                </dd>
              </dl>
            </div>
          </div>
        </article>
        <article class="bg-primary py-12 md:py-24 px-8 md:px-16">
          <div class="max-w-7xl w-full mx-auto">
            <div
              class="flex flex-col md:flex-row gap-8 md:gap-20 justify-center items-center"
            >
              <div
                class="relative flex-shrink-0 h-48 md:h-[19.0625rem] w-48 md:w-[20.9375rem] mx-auto"
              >
                <Image src={Hand} alt="Hand" />
              </div>
              <dl class="flex flex-col gap-4 md:gap-8 text-center md:text-left">
                <dt class="sub-large-texts font-bold">Friendly helper</dt>
                <dd
                  class="sub-texts-2 max-w-full md:max-w-[45rem] leading-[100%]"
                >
                  Friendly customer service is ready to meet your various needs.
                  Whatever ask if you need any help about shopping in Korea.
                </dd>
              </dl>
            </div>
          </div>
        </article>
        <article class="py-20 px-4 sm:px-16 flex items-center justify-center">
          <div
            class="relative w-full h-auto p-6 xl:p-[99.5px_288.5px] bg-primaryBeige rounded-[25px] flex flex-col items-center justify-center gap-8 sm:gap-16"
          >
            <h4 class="titles font-bold text-center whitespace-nowrap">
              CHECK TRACKING
            </h4>
            <dl class="sub-texts space-y-4 flex flex-col gap-4">
              {
                shippingData.map((item) => (
                  <>
                    <dt class="sub-large-texts font-bold">{item.title}</dt>
                    <dd class="sub-texts break-all">
                      <a
                        href={item.url}
                        target="_blank"
                        rel="noreferrer"
                        class="break-all"
                      >
                        {item.url}
                      </a>
                    </dd>
                  </>
                ))
              }
            </dl>
          </div>
        </article>
      </div>
    </section>
  </main>
</MainLayout>

<style>
  .titles {
    @apply font-bold text-[2rem] md:text-[4rem];
  }

  .sub-large-texts {
    @apply text-xl md:text-[2.5rem];
  }

  .sub-texts-2 {
    @apply text-lg md:text-[2rem];
  }

  .sub-texts {
    @apply text-lg sm:text-2xl;
  }
</style>
