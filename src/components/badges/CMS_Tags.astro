---
interface Props {
  tags: CMS_Tag[];
  className?: string;
}
const { tags, className } = Astro.props;
---

<div class:list={["flex flex-wrap gap-2", className]}>
  {
    tags.map((tag) => (
      <span class="bg-primary py-2 px-4 rounded-full text-xs font-bold">
        {tag.name}
      </span>
    ))
  }
</div>
